<style type="text/css">
body {
  margin: 0px 0px 0px 0px;
  font-family:PT Sans,arial, sans serif;
  font-size:12px;
  color:#7b7c7e;
  background: #e2e2e2 url(<%= asset_path 'bg-grain.png' %>) 0 0;
}
a:link, a:visited {
  color:#ff8300;
  font-size:18px;
}
a:link, a:visited {
  color:#ff8300;
  font-size:16px;
  text-decoration:none;
}
a, a:active, a:hover {
  color:#ff8300;
  font-size:16px;
  text-decoration:underline;
}
.page-container {
  width:1005px;
  margin: 0 auto;
  float:inherit;
  position: relative;
  padding: 0px 9px 0px 9px;
  background-color:#fff;
  border-left:solid thin #ccc;
  border-right:solid thin #ccc;
}
.page-header {
  height:90px;
  position: relative;
  padding: 25px 0 0 0px;
  background-color:#fff;
}
.logo {
  height:56px;
  width:380px;
  position:relative;
  float:left;
  padding-top:10px;
  padding-left:10px;
}
.hotline {
  height:68px;
  width:222px;
  position:relative;
  float:right;
  padding-right:10px;
}
.page-content {
  height:520px;
  position: relative;
  padding: 0 0 0 0px;
}
.teaser {
  height:400px;
  width:491px;
  position:relative;
  float:right;
  background:url('<%= asset_path 'teaser3.jpg' -%>') no-repeat left bottom;
  /* border:solid thin #ccc; */
  padding:40px 0px 0px 0px;
  margin:0px 0px 0px 0px;
}
.angebot {
  height:130px;
  width:491px;
  position:inherit;
  float:right;
  /* background:url('<%= asset_path 'teaser3.jpg' %>') no-repeat left bottom;
  border:solid thin #ccc; */
  padding-top:100px;
  padding-bottom:10px;
}
.typo {
  font: 11px  Verdana, Arial, Helvetica, sans-serif normal;
  color:#fff;
}
.page-form-top-container {
  width:488px;
  position:relative;
  float:left;
  padding:20px 0px 20px 10px;
}
.page-form-top {
  height:20px;
  width:488px;
  float:left;
  background:url("<%= asset_path 'form_bg_top.jpg' %>") no-repeat;
}
.page-form-txt {
  height:64px;
  width:488px;
  float:left;
  margin:0px 0px 0px 0px;
  background:url("<%= asset_path 'form_bg_mid.jpg' %>") repeat-y;
}
.page-form-mid {
  width:442px;
  float:left;
  padding:0px 23px 0px 23px;
  background:url("<%= asset_path 'form_bg_mid.jpg' %>") repeat-y;
}
.page-form-bottom {
  height:20px;
  width:488px;
  float:left;
  background:url("<%= asset_path 'form_bg_bottom.jpg' %>") no-repeat;
}
.form {
  background-color:#fccd7f;
  border-top:solid 2px #666;
  border-right:solid 2px #ccc;
  border-bottom:solid 2px #ccc;
  border-left:solid 2px #666;
  padding:2px 2px 2px 2px;
  font: 10px  Verdana, Arial, Helvetica, sans-serif normal;
  color:#666;
  margin-top:3px;
}
.lang {
  width:434px;
}
.kurz {
  width:204px;
}
.skurz {
  width:100px;
}
.page-footer {
  width:995px;
  height:100px;
  padding: 20px 5px 0px 23px;
  margin: 0 auto;
  position: relative;
  float:inherit;
  background:url('<%= asset_path 'footer_bg.jpg' %>') repeat-x;
  border-left:solid thin #ccc;
  border-right:solid thin #ccc;
  border-bottom:solid thin #ccc;
  /*
  background-color:#fff;
  */
}
.footer-menu {
   width:400px;
   color:#ff8300;
   margin-top:5px;
   margin-left:10px;
}
.page-copy {
  font-size:10px;
  color:#979797;
  width:995px;
  padding: 5px 0px 0px 0px;
  margin: 0 auto;
  position: relative;
  float:inherit;
  text-align:center;
}
</style>
</head>

<body>
  <%= yield %>
</body>
</html>
